# Application Configuration
# Copy this file to app.config.env and fill in your values

# Environment
ENVIRONMENT=development

# Security Keys (Generate with: python -c 'import secrets; print(secrets.token_hex(32))')
JWT_SECRET=your-jwt-secret-key-here-min-32-chars
APP_MEDIA_KEY=your-media-key-here-min-32-chars

# Database Configuration
# Option 1: Use full connection string (recommended for production)
POSTGRES_URL=postgresql://username:password@host:port/database_name

# Option 2: Use individual environment variables
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=app_db
# DB_USER=postgres
# DB_PASSWORD=your-secure-password

# Database Pool Settings
DB_POOL_MIN=10
DB_POOL_MAX=20
DB_MAX_QUERIES=50000
DB_MAX_INACTIVE_LIFETIME=300

# Database Timeouts
DB_COMMAND_TIMEOUT=60
DB_STATEMENT_TIMEOUT=30000
DB_IDLE_TIMEOUT=300

# Database SSL (for production)
DB_SSL_MODE=require
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_CA=/path/to/ca-cert.pem

# Read Replica (optional, for scaling)
# DB_READ_REPLICA_HOST=replica-host
# DB_READ_REPLICA_PORT=5432
# DB_READ_REPLICA_DB=app_db

# MongoDB
MONGO_URL=mongodb://username:password@host:27017
MONGO_DB=app_db

# Redis
REDIS_URL=redis://localhost:6379

# Cookie Settings
RESET_COOKIE_CONSENT_ON_RESTART=false

# JWT Settings
JWT_USE_BLACKLIST=true
JWT_REFRESH_EXPIRE_DAYS=30
JWT_ACCESS_EXPIRE_MINUTES=15

# CORS Settings (for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (if using email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true

# File Storage (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# Monitoring & Analytics (optional)
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
DEMO_MODE=false
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false
